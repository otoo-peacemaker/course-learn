    <style name="Theme.CourseLearn" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/blackPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/txt_btn_bg_color</item>
        <item name="colorOnSecondary">@color/blackPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/titleBackground</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
</resources>